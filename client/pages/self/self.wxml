<view class="all">
<view class="login" style="height:200px;">
    <image src="../../images/backGround.jpg" style="height: 200px" class="loginbg" ></image>
    <view bindtap="login_weixin">
      <image src="{{logged ? userInfo.avatarUrl :'../../images/user_defaulthead@2x.png'}}" style="border-radius: 100px" class="personal_logo"                        id="personal_logo"></image>
    </view>
    <view class="userinfo">
        <view class="title" id="user_name" bindtap="login">
            {{userInfo.nickName?userInfo.nickName:"点击左侧头像登录"}}
        </view>
        <view class="subtitle" id="shenfen">
            {{myInfo ? myInfo.studentId+myInfo.name:"未认证,点击上方昵称认证"}}
        </view>
    </view>
    <!--<image src="../../images/personal_icon_arrow.png" class="person_arrow"></image>-->
</view>
<!-- 第一块 -->
<view class="thirdblock">
 <view class="item" bindtap="openAccount" data-index="1">
        <image src="../../images/account.png" class="item_ico"></image>
        <span>借书情况</span>
        <image src="../../images/right.png" class="item_arrow"></image>
    </view>
    <view class="h1"></view>
    <view class="item" bindtap="openBookList" data-index="2">
        <image src="../../images/booklist.png" class="item_ico"></image>
        <span>我的书单</span>
        <image src="../../images/right.png" class="item_arrow"></image>
    </view>
</view>
<!-- 第三块 -->
<view class="h10"></view>
<view class="thirdblock">
    <view class="item" bindtap="openBookList" data-index="5" bindtap="openOpinion">
        <image src="../../images/suggest.png" class="item_ico"></image>
        <span>意见反馈</span>
        <image src="../../images/right.png" class="item_arrow"></image>
    </view>
    <view class="h1"></view>
    <view class="item" bindtap="aboutUs" data-index="4">
        <image src="../../images/about.png" class="item_ico"></image>
        <span>关于士谔书院BookShare</span>
        <image src="../../images/right.png" class="item_arrow"></image>
    </view>
    <view class="h1"></view>

    <view class="h1"></view>
    <view class="item" bindtap="openSetting">
        <image src="../../images/setting.png" class="item_ico"></image>
        <span>设置</span>
    </view>
</view>
<view class="h10"></view>
<view class="h10"></view>
</view>